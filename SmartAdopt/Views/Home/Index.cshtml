@{
    ViewData["Title"] = "Home Page";
}

@{
    bool isAdmin = User.IsInRole("Admin");
    bool isClient = User.IsInRole("Client");
}
<head>
    <style>
        h2 {
            font-size: 3em;
            margin-bottom: 50px; /* Spatiere crescuta pentru titlu */
            font-family: 'Dancing Script', cursive; /* Font decorativ pentru titlu */
        }

        h4 {
            font-size: 2em;
            margin-bottom: 50px; /* Spatiere crescuta pentru titlu */
            font-family: 'Dancing Script', cursive; /* Font decorativ pentru titlu */
        }

    </style>
</head>
@if (isAdmin == false && isClient == false)
{
    <!DOCTYPE html>
    <html lang="ro">
    <head>
        <meta charset="UTF-8" />
        <title>Welcome</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body class="align-items-center justify-content-center">
        <div class="text-center">
            <h2 class="text-white">Bine ati venit!</h2>
            <h4 class="text-white">Doriti sa va creati un cont?</h4>
            <div class="mt-4">
                <a href="Identity/Account/Register" class="btn btn-primary mr-3">Creare cont</a>
            </div>
        </div>
    </body>
    </html>
}

@if (isAdmin == true)
{
    <script type="text/javascript">
        window.location.href = '@Url.Action("Index", "Admins")';
    </script>
}
else if (isClient == true)
{
    <script type="text/javascript">
        window.location.href = '@Url.Action("Index", "Clients")';
    </script>
}