@model Animal

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="card mb-4 shadow-sm animal-card">
    <div class="card-body bg-light p-3">
        <h3 class="card-title text-center py-2 px-3 rounded-1 bg-pet text-dark">@Model.nume</h3>

        <div class="d-flex justify-content-between flex-row mt-3">
            <div class="card-text text-justify p-2 flex-grow-1">
                <p><strong>Specie:</strong> @Model.specie</p>
                <p><strong>Rasa:</strong> @Model.rasa</p>
                <p><strong>Vârsta:</strong> @Model.varsta ani</p>
                <p>@Model.descriere</p>
            </div>
            @if (!string.IsNullOrEmpty(@Model.ImagePath))
            {
                <div class="border p-2 rounded">
                    <img src="@Url.Content(@Model.ImagePath)" style="width: 150px; height: 100px; object-fit: cover;" alt="Imaginea animalului" class="img-fluid rounded" />
                </div>
            }
            else
            {
                <p class="card-text border p-2 text-center text-dark" style="width: 150px; font-size: 0.9rem;">Acest animăluț nu are imagine!</p>
            }
        </div>

        <div class="mt-3">
            <h4 class="text-center mb-2 text-dark">Caracteristici</h4>
            <div class="row">
                <div class="col-md-6">
                    <p class="text-dark">
                        <strong>Nivel Energie:</strong>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.nivel_energie)
                            {
                                <i class="bi bi-star-fill star-icon"></i>
                            }
                            else
                            {
                                <i class="bi bi-star star-icon"></i>
                            }
                        }
                    </p>
                    <p class="text-dark">
                        <strong>Mărime:</strong>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.marime)
                            {
                                <i class="bi bi-star-fill star-icon"></i>
                            }
                            else
                            {
                                <i class="bi bi-star star-icon"></i>
                            }
                        }
                    </p>
                    <p class="text-dark">
                        <strong>Adaptabilitate:</strong>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.nivel_adaptabilitate)
                            {
                                <i class="bi bi-star-fill star-icon"></i>
                            }
                            else
                            {
                                <i class="bi bi-star star-icon"></i>
                            }
                        }
                    </p>
                </div>
                <div class="col-md-6">
                    <p class="text-dark">
                        <strong>Grupa Vârstă:</strong>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.grupa_varsta)
                            {
                                <i class="bi bi-star-fill star-icon"></i>
                            }
                            else
                            {
                                <i class="bi bi-star star-icon"></i>
                            }
                        }
                    </p>
                    <p class="text-dark">
                        <strong>Atenție Necesară:</strong>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.nivel_atentie_necesara)
                            {
                                <i class="bi bi-star-fill star-icon"></i>
                            }
                            else
                            {
                                <i class="bi bi-star star-icon"></i>
                            }
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <h4 class="text-center mb-2 text-dark">Sănătate și Îngrijire</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-light text-dark"><strong>Vaccinuri:</strong> @Model.vaccinuri</li>
                <li class="list-group-item bg-light text-dark"><strong>Tip Alimentație:</strong> @Model.tip_alimentatie</li>
                <li class="list-group-item bg-light text-dark"><strong>Starea Sănătății:</strong> @Model.starea_sanatatii</li>
                <li class="list-group-item bg-light text-dark"><strong>Ultima Verificare Vet:</strong> @Model.ultima_verificare_vet.ToString("d")</li>
            </ul>
        </div>

        <div class="text-center mt-3">
            <span class="badge bg-success fs-5 text-white">Preț: @Model.pret RON</span>
        </div>
    </div>
</div>

<style>
    .animal-card {
        border-radius: 10px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid #ffe6f0;
        max-width: 600px;
        margin: 0 auto;
    }

    .bg-pet {
        background-color: #ff99cc;
    }

    .bg-light {
        background-color: #fff5f7 !important;
        color: #333 !important;
    }

    .card-title {
        font-family: 'Comic Sans MS', cursive, sans-serif;
        font-size: 1.5rem;
    }

    .card-text, .list-group-item, h4 {
        font-size: 0.9rem;
    }

    .badge {
        padding: 8px 15px;
    }

    .star-icon {
        color: #ffc107 !important;
        font-size: 1.1rem;
        margin-right: 3px;
    }
</style>