
@if (ViewBag.Message != null)
{
    <div class="alert-container mb-5">
        <div class="alert alert-custom d-flex align-items-center justify-content-between rounded-3 p-3"
             role="alert">
            <div class="d-flex align-items-center">
                @if (ViewBag.MessageType == "success")
                {
                    <i class="bi bi-check-circle-fill me-2 text-success"></i>
                }
                else if (ViewBag.MessageType == "error")
                {
                    <i class="bi bi-exclamation-triangle-fill me-2 text-danger"></i>
                }
                else
                {
                    <i class="bi bi-info-circle-fill me-2 text-info"></i>
                }
                <span class="message-text">@ViewBag.Message</span>
            </div>
        </div>
    </div>
}

<br />
<br />

<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-person"> </i> UserName: @user.Item1.UserName</p>

                        <p><i class="bi bi-envelope"></i> Email utilizator: @user.Item1.Email</p>


                        @if (@user.Item1.nume != null)
                        {
                            <p><i class="bi bi-person"> </i> Nume utilizator: @user.Item1.nume</p>
                        }


                        @if (@user.Item1.prenume != null)
                        {
                            <p><i class="bi bi-person"> </i> Prenume utilizator: @user.Item1.prenume</p>
                        }

                        @if (user.Item2 != null)
                        {
                            <p>
                                <i class="bi bi-shield-lock"></i> Rol:
                                @foreach (var role in user.Item2)
                                {
                                    <span>@role</span>
                                }
                            </p>
                        }
                    </div>
                    
                    <div class="d-flex flex-row justify-content-between p-3">

                        @if (user.Item2.Contains("Client"))
                        {
                            <div> <a class="btn bg-baby-blue" href="/Admins/ViewClient/@user.Item1.Id"> Vizualizare client</a> </div>
                        }
                        <div> <a class="btn bg-baby-blue" href="/Admins/SchimbareRol/@user.Item1.Id"> Schimbare rol utilizator</a> </div>

                        <div> <a class="btn bg-albastru-inchis" href="/Admins/DeleteUser/@user.Item1.Id"> Stergere utilizator</a> </div>

                    </div>
                </div>

            </div>
        </div>
    }

</div>

<br />
<br />




<style>
    .bi-shield-lock {
        color: #28a745; 
        margin-right: 5px;
    }
    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background-color: #ffffff;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }
    .card-body {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }
    .card-body p {
        argin: 0.5rem 0;
        color: #333;
        font-size: 1rem;
    }
    .bi {
        margin-right: 5px;
        color: #007bff;
    }
    .bg-baby-blue {
        background-color: #d4ecff;
        color: #007bff;
        border: none;
        transition: background-color 0.2s ease;
    }
    .bg-baby-blue:hover {
        background-color: #b2dcff;
        color: #0056b3;
     }
    .bg-albastru-inchis {
        background-color: #004085;
        color: white;
        border: none;
        transition: background-color 0.2s ease;
    }
    .bg-albastru-inchis:hover {
        background-color: #002752;
    }
    .btn {
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 500;
        font-size: 0.95rem;
        text-decoration: none;
        display: inline-block;
    }
    .row {
        margin-left: 0;
        margin-right: 0;
    }
    .col-4 {
        padding: 10px;
    }
</style>
