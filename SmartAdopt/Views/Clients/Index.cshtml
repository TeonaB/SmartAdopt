@model ApplicationUser

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8" />
    <title>Welcome to Smart Adopt!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #e6f7ff; /* Soft pastel blue */
            font-family: 'Roboto', sans-serif;
            color: #333;
            text-align: center;
        }

        .jumbotron {
            background-color: rgba(255, 255, 255, 0.8);
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            padding: 4rem 2rem;
            margin-bottom: 2rem;
            border-radius: 15px;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-family: 'Pacifico', cursive; /* Playful font */
            color: #ff6b6b; /* Warm, friendly color */
        }

        h4 {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            color: #4ecdc4; /* Complementary color */
        }

        .btn-primary, .btn-secondary {
            font-size: 1.2rem;
            padding: 1rem 3rem;
            margin: 0.5rem;
            border-radius: 2rem;
            text-decoration: none;
            transition: background-color 0.3s, color 0.3s;
        }

        .btn-primary {
            background-color: #ff6b6b;
            border-color: #ff6b6b;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #ff8787;
            border-color: #ff8787;
            color: #fff;
        }

        .btn-secondary {
            background-color: #4ecdc4;
            border-color: #4ecdc4;
            color: #fff;
        }

        .btn-secondary:hover {
            background-color: #66e0d5;
            border-color: #66e0d5;
            color: #fff;
        }

        .pet-image {
            width: 100px;
            height: 100px;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="jumbotron">
        <h2>Salut, @Model.nume @Model.prenume!</h2>
        <h4>Bine ai venit la Smart Adopt, locul unde îți găsești prietenul perfect!</h4>
        <p>Vrei să completezi un chestionar rapid pentru a-ți găsi animalul ideal?</p>
        <a href="@Url.Action("Chestionar", "Clients")" class="btn btn-primary mr-3">Da, completează chestionarul</a>
        <a href="@Url.Action("Index", "Animals")" class="btn btn-secondary">Nu, arată-mi animalele disponibile</a>
    </div>
</body>
</html>