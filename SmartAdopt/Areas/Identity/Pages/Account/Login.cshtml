@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>

        /* Spatiu intre cele doua casete: email si password */
        .form-floating + .form-floating {
            margin-top: 15px;
        }

        /* Casetele de text transparente*/
        .form-floating input[type="email"],
        .form-floating input[type="password"] {
            background-color: rgba(255, 255, 255, 0.5); 
            border: 1px solid #ced4da; 
        }

        .form-floating label {
            color: #000; 
        }

    </style>

</head>

<div class="row justify-content-center">
    <div class="col-10">
        <section>
            <form id="account" method="post">
                <h2 class="text-dark">Welcome back!</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="text-dark">
                    <p >
                        <a id="forgot-password" asp-page="./ForgotPassword">V-ati uitat parola?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Inregistrare cu un cont nou</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Retrimitere email de confirmare</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
